<h1><%= t('toDoList') %></h1>
<%= link_to t('add_new'), new_task_path, class: 'btn btn-success' %>

<div class="table-responsive-xl">
  <table class="table table-hover mt-5">
    <thead class="thead-dark">
      <tr>
        <th><%= t('title') %></th>
        <th><%= t('category') %></th>
        <th><%= t('priority') %></th>
        <th><%= t('status') %></th>
        <th><%= t('period') %></th>
        <th><%= t('more') %></th>
      </tr>
    </thead>
    <% @tasks.each do |task| %>
    <tbody>
      <tr>
        <td><%= task.title %></td>
        <td><%= t("#{task.category}") %></td>
        <td><%= t("#{task.priority}") %></td>
        <td><%= t("#{task.status}") %></td>
        <td><%= task.start_at %> - <%= task.end_at %></td>
        <td><%= link_to t('more'), task_path(task.id), class: 'btn-sm btn-warning' %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
