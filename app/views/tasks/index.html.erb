<%= flash[:notice] %>
<h1>to-do List</h1>

<% @tasks.each do |t| %>
<ul>
  <li>名稱 <%= t.title %></li>
  <li>分類 <%= t.category %></li>
  <li>時間 <%= t.start_at %><%= t.end_at %></li>
  <li>優先 <%= t.priority %></li>
  <li>狀態 <%= t.status %></li>
  <li><%= link_to '詳細內容', task_path(t.id) %></li>
  <div>
    <%= link_to '編輯', edit_task_path(t.id) %>
    <%= link_to '刪除', task_path(t.id), method: 'delete' %>
  </div>
</ul>
<% end %>

<%= link_to '新增事項', new_task_path %>