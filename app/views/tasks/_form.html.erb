<% if @task.errors.any? %>
  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= simple_form_for @task do |form| %>
  <div class="form-inputs ">
    <div class="row">

      <div class="col-lg-10 col-md-12col-sm-4 ">
        <%= form.input :title, label: '名稱' %>
      </div>

      <div class="col-lg-10 col-md-12 col-sm-12">
        <%= form.input :category, label: '分類',
            collection: ['工作','居家','娛樂','學習','其他'] %>
      </div>

      <div class="col-lg-10 col-md-12 col-sm-12">
        <%= form.input :description, label: '描述' %>
      </div>

      <div class="col-lg-10 col-md-12 col-sm-12">
        <%= form.input :priority, label: '優先',
            collection: ['非常緊急', '緊急' ,'普通' ,'小事'] %>
      </div>

      <div class="col-lg-5 col-md-12 col-sm-12">
        <%= form.input :start_at, label: '開始' %>
      </div>

      <div class="col-lg-5 col-md-12 col-sm-12">
        <%= form.input :end_at, label: '結束' %>
      </div>

      <div class="col-lg-5 col-md-12 col-sm-12">
        <%= form.submit "確認儲存", class: 'btn btn-success' %>
      </div>
    
    </div>
  </div>
<% end %>