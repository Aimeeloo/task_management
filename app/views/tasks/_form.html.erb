<% if task.errors.any? %>
  <ul>
    <% task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= simple_form_for task, html: { class: 'col-lg-10 col-md-12 col-sm-12' } do |f| %>
    <%= f.input :title %>
    <%= f.input :category %>
    <%= f.input :description %>
    <%= f.input :priority %>
    <%= f.input :status %>
    <%= f.input :start_at %>
    <%= f.input :end_at %>
    <%= f.submit t('confirm'), class: 'btn btn-success' %>
  <%= link_to t('back'), root_path, class: 'btn btn-secondary' %>
<% end %>
